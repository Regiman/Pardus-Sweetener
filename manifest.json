{
  "name": "Pardus Sweetener",
  "version": "1.5",
  "description": "User interface enhancements for Pardus - alpha release",
  "background_page": "bg.html",
  "options_page": "options.html",
  "content_scripts": [
    { "matches":    [ "*://*.pardus.at/msgframe.php*" ],
      "js":         [ "clock.js", "msgframe.js" ],
      "all_frames": true },
    { "matches":    [ "*://*.pardus.at/ship2opponent_combat.php*" ],
      "js":         [ "combat.js", "s2oframe.js" ],
      "all_frames": true },
    { "matches":    [ "*://*.pardus.at/ship2ship_combat.php*" ],
      "js":         [ "combat.js", "s2sframe.js" ],
      "all_frames": true },
    { "matches":    [ "*://*.pardus.at/main.php*" ],
      "js":         [ "nav.js" ],
      "all_frames": true },
    { "matches":    [ "*://*.pardus.at/game.php" ],
      "js":         [ "game.js" ],
      "all_frames": false }
  ],
  "page_action": {
    "default_icon": "19.png",
    "default_title": "Change Pardus Sweetener settings",
    "popup": "popup.html"
  },
  "icons": { "16":  "16.png",
             "48":  "48.png",
             "64":  "64.png",
             "128": "128.png" },
  "permissions": [ "notifications" ]
}
